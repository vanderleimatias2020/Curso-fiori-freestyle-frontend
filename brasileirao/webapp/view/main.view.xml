                                        <Text text="38"></Text>
                                        <Text text="18"></Text>
                                        <Text text="20"></Text>
                                    </cells>
                                </ColumnListItem>
                            </items>


                        </Table>
                    </IconTabFilter>

                    <IconTabFilter text="Partidas" icon="sap-icon://soccer" id="tabPartidas">
                        <core:Fragment fragmentName="brasileirao.view.partidas" type="XML" />

                    </IconTabFilter>
                </items>

            </IconTabBar>



        </content>
    </Page>
</mvc:View>
